    <group id="controls"
           posref="TL TL"
           w="206"
           h="20"
           y="-6">
      <!-- Slots of Prev/Play/Pause/Next buttons -->
      <view id="slot1"
            type="bitmap"
            posref="ML ML"
            x="8"
            y="-1"
            texture="mp3_button_slot.tga" />
      <view id="slot2"
            type="bitmap"
            posref="TR TL"
            posparent="slot1"
            x="2"
            y="0"
            texture="mp3_button_slot.tga" />
      <view id="slot3"
            type="bitmap"
            posref="TR TL"
            posparent="slot2"
            x="2"
            y="0"
            texture="mp3_button_slot.tga" />
      <view id="slot4"
            type="bitmap"
            posref="TR TL"
            posparent="slot3"
            x="2"
            y="0"
            texture="mp3_button_slot.tga" />
